program Proje;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

var
   Matrix : array of array of integer;
   Arr : array [1.. 256] of integer;
   i,j,k, Num, h, m, max: Byte;
begin

   Writeln('Num');
   Readln(Num);
   SetLength(Matrix, Num, 2);
   Dec(num);
   m := 1;
   for i := 0 to Num do
      Readln(Matrix[i,0],Matrix[i,1]);
   for i := 0 to Num do
      for j := 1+ i to Num do
      begin
         h := 2;
         for k := 1+j to Num do
         begin
            if (Matrix[k,0] - Matrix[j,0]) * (Matrix[j,1]- Matrix[i,1]) = (Matrix[k,1] - Matrix[j,1]) * (Matrix[j,0]- Matrix[i,0]) then
               inc(h);
         end;
         Arr[m] := h;
         inc(m);
      end;
   max := Arr[1];
   j := 1;
   for i := 2 to m do
      if max < Arr[i] then
      begin
         j := i;
         max := Arr[i];
      end;
   while j <> 0 do
   i := 0;
   begin
      j:= j - num + i;
      inc(i);
   end;
   writeln(j);
   writeln(max);
   Readln;
end.
